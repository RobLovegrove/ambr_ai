{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@ambr/db": ["./packages/db/src"],
      "@ambr/llm": ["./packages/llm/src"],
      "@ambr/shared": ["./packages/shared/src"]
    }
  },
  "exclude": ["node_modules", "dist", ".next"]
}

